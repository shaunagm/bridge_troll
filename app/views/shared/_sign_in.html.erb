<div class='row sign-in'>
  <div class='col-md-6 login-option'>
    <h3>Sign in with OpenHatch Events</h3>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper_mappings: {boolean: :vertical_boolean}) do |f| %>
      <%= f.input :email %>

      <%= f.input :password %>

      <% if devise_mapping.rememberable? -%>
        <%= f.input :remember_me, as: :boolean %>
      <% end -%>

      <div><%= f.submit "Sign in", class: 'btn btn-submit' %></div>
    <% end %>
  </div>
  <div class='col-md-6 login-option'>
  </div>
</div>
